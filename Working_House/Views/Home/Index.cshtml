    <title>Layout Sample</title>
    <style>
        nav, footer {
            display: flex;
            background-color: bisque;
            justify-content: space-between;
            align-items: center;
            width: 80%;
            height: 100px;
            margin: 0px auto;
            padding: 0px 20px;
        }
     
        .logo {
            font-size: 35px;
            color: black;
        }

        .menuBox ul {
            display: flex;
            list-style-type: none;
        }

            .menuBox ul li {
                cursor: pointer;
                background-color: darkorange;
                width: 150px;
                height: 25px;
                display: block;
                padding: 15px;
                margin: 0 15px;
                font-size: 20px;
                text-align: center;
                font-family: sans-serif;
                font-weight: bold;
            }

                .menuBox ul li:hover {
                    background-color: red;
                }

                .menuBox ul li a {
                    text-decoration: none;
                    color: white;
                }

        section {
            height: 400px;
            width: 80%;
            margin: 0px auto;
            padding: 0px 0px;
        }
    </style>
